{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Honey Agent Tools",
  "version": "0.1.0",
  "identifier": "cn.nodfe.honey-agent-tools",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "honey-agent-tools",
        "width": 600,
        "height": 80,
        "minWidth": 400,
        "minHeight": 80,
        "maxWidth": 800,
        "maxHeight": 80,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "globalShortcut": {}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
